<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/white"
    app:cardElevation="0px"
    app:cardUseCompatPadding="false"
    app:contentPaddingBottom="-50dp"
    app:contentPaddingTop="-50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.tangxiaopeng.videoeditdemo.view.RoundImageView
            android:id="@+id/rivFilterItem"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:orientation="vertical"
            android:src="@drawable/xg4"
            app:border_color="@color/white"
            app:border_width="0dp"
            app:type="circle"
            >
        </com.tangxiaopeng.videoeditdemo.view.RoundImageView>

        <TextView
            android:id="@+id/tvFilterItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="无滤镜"
            android:textColor="@color/index_black"
            android:textSize="15sp"
            />
    </LinearLayout>

</android.support.v7.widget.CardView>